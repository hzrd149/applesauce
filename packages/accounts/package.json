{
  "name": "applesauce-accounts",
  "version": "3.1.0",
  "description": "A simple nostr account management system",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "watch:build": "tsc --watch > /dev/null",
    "test": "vitest run --passWithNoTests",
    "watch:test": "vitest"
  },
  "keywords": [
    "nostr",
    "applesauce"
  ],
  "author": "hzrd149",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./accounts": {
      "import": "./dist/accounts/index.js",
      "require": "./dist/accounts/index.js",
      "types": "./dist/accounts/index.d.ts"
    },
    "./accounts/*": {
      "import": "./dist/accounts/*.js",
      "require": "./dist/accounts/*.js",
      "types": "./dist/accounts/*.d.ts"
    }
  },
  "dependencies": {
    "@noble/hashes": "^1.7.1",
    "applesauce-core": "^3.1.0",
    "applesauce-signers": "^3.1.0",
    "nanoid": "^5.1.5",
    "nostr-tools": "~2.15",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "funding": {
    "type": "lightning",
    "url": "lightning:nostrudel@geyser.fund"
  }
}
