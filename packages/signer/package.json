{
  "name": "applesauce-signer",
  "version": "0.9.0",
  "description": "Signer classes for applesauce",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch:build": "tsc --watch > /dev/null",
    "test": "vitest run --passWithNoTests",
    "watch:test": "vitest"
  },
  "keywords": [
    "nostr"
  ],
  "author": "hzrd149",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./signers": {
      "import": "./dist/signers/index.js",
      "types": "./dist/signers/index.d.ts"
    },
    "./signers/*": {
      "import": "./dist/signers/*.js",
      "types": "./dist/signers/*.d.ts"
    }
  },
  "dependencies": {
    "@noble/hashes": "^1.5.0",
    "@noble/secp256k1": "^1.7.1",
    "@scure/base": "^1.1.9",
    "@types/dom-serial": "^1.0.6",
    "applesauce-core": "^0.9.0",
    "applesauce-net": "^0.9.0",
    "debug": "^4.3.7",
    "nanoid": "^5.0.7",
    "nostr-tools": "^2.10.3"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  },
  "funding": {
    "type": "lightning",
    "url": "lightning:nostrudel@geyser.fund"
  }
}
