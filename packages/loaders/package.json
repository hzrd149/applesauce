{
  "name": "applesauce-loaders",
  "version": "0.9.0",
  "description": "A collection of observable based loaders built on rx-nostr",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch:build": "tsc --watch > /dev/null",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests",
    "watch:test": "(trap 'kill 0' SIGINT; pnpm run build -w > /dev/null & pnpm run test --watch)"
  },
  "keywords": [
    "nostr"
  ],
  "author": "hzrd149",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./loaders": {
      "import": "./dist/loaders/index.js",
      "types": "./dist/loaders/index.d.ts"
    },
    "./loaders/*": {
      "import": "./dist/loaders/*.js",
      "types": "./dist/loaders/*.d.ts"
    },
    "./operators": {
      "import": "./dist/operators/index.js",
      "types": "./dist/operators/index.d.ts"
    },
    "./operators/*": {
      "import": "./dist/operators/*.js",
      "types": "./dist/operators/*.d.ts"
    }
  },
  "dependencies": {
    "applesauce-core": "^0.9.0",
    "nanoid": "^5.0.9",
    "nostr-tools": "^2.10.3",
    "rx-nostr": "^3.4.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.13",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "typescript": "^5.6.3"
  },
  "jest": {
    "roots": [
      "dist"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ]
  },
  "funding": {
    "type": "lightning",
    "url": "lightning:nostrudel@geyser.fund"
  }
}
